<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.comment.dao.StarMapper">

	<sql id="starColumns">
		  aptCode, userid
	</sql>
		

	<insert id="insertStar" parameterType="StarDto">
		INSERT INTO bookmark (<include refid="starColumns"/>)
		VALUES (#{aptCode}, #{userid})
	</insert>	

	<delete id="deleteStar" parameterType="StarDto">
		delete from bookmark
		where aptCode = #{aptCode} and userid = #{userid}
	</delete>

	<select id="selectAll" parameterType="string" resultType="String">
		SELECT aptCode
		FROM bookmark
		WHERE userid = #{userid}
	</select>



</mapper>